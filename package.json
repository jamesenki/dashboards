{
  "name": "iotsphere-refactor",
  "version": "1.0.0",
  "description": "Python backend with lightweight JavaScript frontend for IoT monitoring",
  "scripts": {
    "test:unit:js": "jest",
    "test:unit:py": "python -m pytest src/tests/unit -v",
    "test:integration:py": "python -m pytest src/tests/integration-tdd -v",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:cypress": "cypress run",
    "test:bdd": "cucumber-js --config src/tests/bdd/config/cucumber.js",
    "test:bdd:py": "cd src/tests/bdd && python run_bdd_tests.py --report --junit",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint 'frontend/static/js/**/*.js'",
    "lint:css": "stylelint 'frontend/static/css/**/*.css'",
    "lint:html": "htmlhint 'frontend/templates/**/*.html'",
    "format": "prettier --write 'frontend/static/{js,css}/**/*.{js,css}'",
    "check-format": "prettier --check 'frontend/static/{js,css}/**/*.{js,css}'",
    "code-quality": "python tools/code-quality/check_code_quality.py",
    "code-quality:fix": "python tools/code-quality/check_code_quality.py --fix",
    "bundle": "node bundle.js",
    "build": "npm run lint && npm run bundle",
    "test-report": "node scripts/test-report-generator.js",
    "test:js-all": "npm run test:unit:js && npm run test:e2e && npm run test:cypress && npm run test:bdd",
    "test:py-all": "npm run test:unit:py && npm run test:integration:py && npm run test:bdd:py",
    "test:all": "npm run test:js-all && npm run test:py-all && npm run test-report",
    "test:bdd-with-report": "cucumber-js --config src/tests/bdd/config/cucumber.js && npm run test-report",
    "test:e2e-with-report": "cypress run && npm run test-report",
    "test:all-with-report": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:bdd && npm run test-report"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@cucumber/cucumber": "^11.2.0",
    "@playwright/test": "^1.51.1",
    "axios": "^1.8.4",
    "babel-jest": "^29.7.0",
    "chalk": "^5.4.1",
    "cypress": "^14.3.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.1.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^11.1.0",
    "prettier": "^2.8.8",
    "puppeteer": "^24.6.0",
    "stylelint": "^15.6.1",
    "stylelint-config-standard": "^33.0.0",
    "uglify-js": "^3.19.3",
    "ws": "^8.18.1"
  },
  "dependencies": {
    "chai": "^4.5.0",
    "playwright": "^1.51.1"
  }
}